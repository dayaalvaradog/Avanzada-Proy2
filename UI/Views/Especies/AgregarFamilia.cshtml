@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@using Core.Entidades
@model FamiliaViewModel;

<h2>Agregar Familia</h2>

<form id="AgregarFamilia" asp-action="Agregar" method="post">
    <div class="form-group">
        <label>Nombre Familia</label>
        <input asp-for="nombre" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
<div id="mensaje" class="mt-3"></div>

@section Scripts {
    <script>
        document.getElementById('AgregarFamilia').addEventListener('submit', async function(e) {
            e.preventDefault();

            const mensajeDiv = document.getElementById('mensaje');
            mensajeDiv.innerHTML = '';

            const formData = new FormData(this);
            const familiaData = {
                nombre: formData.get('nombre')
            };

            const API_BASE_URL = "@Configuration["AppSettings:ApiBaseUrl"]";
            const apiUrl = `${API_BASE_URL}/api/Familias`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(familiaData)
                });

                if (response.ok) {
                    const result = await response.json();
                    mensajeDiv.className = 'alert alert-success';
                    mensajeDiv.innerHTML = `Especie '${result.nombre}' ingresado exitosamente con ID: ${result.idFamilia}.`;
                    this.reset();
                } else {
                    const errorData = await response.json();
                    mensajeDiv.className = 'alert alert-danger';
                    let errorMessage = 'Error al ingresar familia: ';
                    if (errorData.errors) {
                        for (const key in errorData.errors) {
                            errorMessage += `${key}: ${errorData.errors[key].join(', ')} `;
                        }
                    } else {
                        errorMessage += errorData.title || errorData.detail || JSON.stringify(errorData);
                    }
                    mensajeDiv.innerHTML = errorMessage;
                    console.error('Error del API:', errorData);
                }
            } catch (error) {
                console.error('Error de red al guardar la fanilia:', error);
                mensajeDiv.className = 'alert alert-danger';
                mensajeDiv.innerHTML = `Ocurrió un error de red: ${error.message}. Asegúrate de que la API está corriendo y las configuraciones de CORS son correctas.`;
            }
        });
    </script>
}